    }
  },
  "AllowedHosts": "*",
  "ReloadingPolicies": [
    {
      "Name": "Daily",
      "Windows": [
        {
          "About": "Loads the coming 7 days + yesterday; runs daily. As this is static data, a daily update should be enough",
          "TimeBefore": 86400,
          "TimeAfter": 604800,
          "ReloadEvery": 86400,
          "ForceUpdate": false,
          "Retries": 3
        }
      ]
    },
    {
      "Name": "SevenDays",
      "Windows": [
        {
          "About": "Loads the coming 7 days + yesterday; runs daily",
          "TimeBefore": 86400,
          "TimeAfter": 604800,
          "ReloadEvery": 86400,
          "ForceUpdate": false,
          "Retries": 3
        },
        {
          "About": "Loads tomorrow; runs every 6 hours",
          "TimeBefore": -86400,
          "TimeAfter": 172800,
          "ReloadEvery": 21600,
          "ForceUpdate": true
        },
        {
          "About": "Loads the coming 24h (minus the first 6); runs every 1 hours",
          "TimeBefore": -43200,
          "TimeAfter": 86400,
          "ReloadEvery": 3600,
          "ForceUpdate": true
        },
        {
          "About": "Loads the coming 12h; runs every 30 minutes",
          "TimeBefore": -21600,
          "TimeAfter": 43200,
          "ReloadEvery": 1800,
          "ForceUpdate": true
        },
        {
          "About": "Loads the coming 6h; runs every 5 minutes",
          "TimeBefore": -7200,
          "TimeAfter": 21600,
          "ReloadEvery": 300,
          "ForceUpdate": true
        },
        {
          "About": "Loads the coming 2h; runs every 1 minutes",
          "TimeBefore": 0,
          "TimeAfter": 7200,
          "ReloadEvery": 60,
          "ForceUpdate": true
        },
        {
          "About": "Loads the coming 1h; runs every few seconds",
          "TimeBefore": 0,
          "TimeAfter": 3600,
          "ReloadEvery": 5,
          "ForceUpdate": true
        }
      ]
    }
  ],
  "TransitDb": [
